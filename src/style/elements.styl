@require "system.styl"

/*  <text>  */
.page-title
	position relative
	color #fff
	font-weight 500
	font-size 5rem
	font-family fontFira
	line-height 4.4rem
	text-align center
	padding-bottom 18px
	margin 0
	&:before
		position absolute
		bottom 0
		left 50%
		width 30px
		height 6px
		background-color #d9a501
		content ''
		transform translateX(-50%)
/*  </text>  */

/*  <buttons>  */
.btn
	height 54px
	color #000
	font-weight 500
	font-size 2.4rem
	background-color #d9a501
	border 0
	border-radius (@height / 2)
	padding 0 37px
	box-shadow 4px 8px 9px rgba(#684e00, .42)
	transition all .2s
	&:hover
		text-decoration none
		background-color #fbc10a
a.btn
	display inline-block
	line-height 54px
/*  </buttons>  */