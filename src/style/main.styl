/*  <vars>  */
fontFira = 'Fira Sans Condensed';
fontOpen = 'Open Sans';
/*  </vars>  */

/*  <general>  */
body
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction column
	color #e7e7e7
	font normal 1.5rem/1.3 fontOpen, sans-serif;
	background-color #353535
:-moz-placeholder
	opacity 1
	color currentColor
:-ms-input-placeholder
	opacity: 1
	color currentColor
a
	color inherit
	font inherit
	text-decoration none
	transition all .2s
	&:hover
		text-decoration underline
.main
	flex 1
	padding-bottom 40px
/*  </general>  */

/*  <menu>  */
.menu
	position fixed
	top 0
	right 0
	bottom 0
	z-index 107
	overflow-y auto
	width 300px
	font-weight 600
	font-size 2.1rem
	background-color #5c5c5c
	border-left 2px solid #d9a501
	transform translateX(103%)
	transition all .5s
	&--active
		transform translateX(0)
	&__cover
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		z-index 106
		opacity .83
		background url('../i/menu__cover.png')
	&__close
		position absolute
		top 31px
		right 5%
		width 20px
		height @width
		&--panel
			top 20px
		&:before
		&:after
			position absolute
			top 50%
			left 0
			width 100%
			height 1px
			background-color #a8a8a8
			content ''
			transition all .2s
		&:before
			transform rotate(45deg)
		&:after
			transform rotate(-45deg)
		&:hover
			&:before
			&:after
				background-color #fff
	&__logo
		display block
		height 80px
		background-color #505050
		border-bottom 1px solid #4b4b4b
		padding 14px 20% 0 10%
		img
			filter "progid:DXImageTransform.Microsoft.Dropshadow(OffX=1, OffY=1,Color='#444')"
			filter drop-shadow(1px 1px 1px rgba(#000, .43))
	&__avatar
		position absolute
		top 8px
		left 10%
		width 48px
		height @width
		&:before
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			z-index 1
			background-color #4b4b4b
			border-radius 50%
			margin -10px
			content ''
		img
			position relative
			z-index 2
			width 100%
			border 2px solid #bb8e00
			border-radius 50%
			box-shadow 0 14px 21px rgba(#846505, .29)
	&__balance
		color #fff3cd
		font-weight 400
		font-size 1.5rem
		background-color #4b4b4b
		border-bottom 1px solid #393939
		padding 20px 0 10px calc(10% + 60px)
		&--value
			color #fff
			font-weight 700
	&__btns
		background-color #4b4b4b
		border-top 1px solid #6a6a6a
		border-bottom 1px solid #393939
		padding 28px 0 22px 10%
	&__nav
		border-top 1px solid #6e6e6e
		padding 10px 10%
		&-item
			display block
			position relative
			padding 5px 0 5px 30px
			margin 5px 0
			&:before
				position absolute
				top 50%
				left 0
				width 10px
				height @width
				border solid #d9a501
				border-width 0 2px 2px 0
				content ''
				transform translateY(-50%) rotate(-45deg)
	&__lang
		margin 20px 10% 0 10%
		&-item
			display inline-block
			vertical-align middle
			width 64px
			height 34px
			color #e4e4e4
			font-weight 600
			font-size 2.1rem
			line-height 30px
			text-align center
			background-color rgba(#000, .2)
			border 2px solid #bb8e00
			border-radius (@height / 2)
			margin-right 20px
			box-shadow 0 14px 21px rgba(#846505, .29)
			&--active
				width 60px
				height 30px
				color #000
				background-color #d9a501
				border 0
				box-shadow 3px 6px 6px rgba(#684e00, .42)
	&__gohome
		height 60px
		background-color #4b4b4b
		color #bababa
		font-weight 600
		font-size 2.1rem
		text-align center
		&-link
