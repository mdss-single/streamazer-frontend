/*  <vars>  */
fontFira = 'Fira Sans Condensed';
fontOpen = 'Open Sans';
/*  </vars>  */

/*  <animations>  */
@keyframes stars
	from
		transform:translateX(0)
	to
		transform:translateX(-50%)
@keyframes fade
	from
		opacity 0
	to
		opacity 1
/*  </animations>  */

/*  <general>  */
body
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-direction column
	color #e7e7e7
	font normal 1.5rem/1.3 fontOpen, sans-serif;
	background-color #353535
:-moz-placeholder
	opacity 1
	color currentColor
:-ms-input-placeholder
	opacity: 1
	color currentColor
a
	color inherit
	font inherit
	text-decoration none
	transition all .2s
	&:hover
		text-decoration underline
.main
	flex 1
	padding-bottom 40px
/*  </general>  */

/*  <menu>  */
.menu
	position fixed
	top 0
	right -300px
	bottom 0
	z-index 7
	overflow-y auto
	width 300px
	font-weight 600
	font-size 2.1rem
	transition all .5s
.menu--active
	transform translateX(-100%)
/*  </menu>  */

/*  <header>  */
.header
	flex-shrink 0
	position relative
	overflow hidden
	height 656px
	&__stars
		position absolute
		top 0
		left 0
		bottom 0
		z-index 1
		width 200%
		background #0b0600 url('../i/header-mobile.png') repeat-x 0 0 / 50% auto
		animation: stars 20s linear infinite;
	&:before
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		z-index 2
		background url('../i/header-mobile-planets.png') no-repeat 0 0 / cover
		content ''
	&:after
		position absolute
		bottom 0
		left 0
		z-index 3
		width 100%
		height 71px
		background url('../i/header-mountains.png') repeat-x 0 0
		content ''
	&__main
		//position relative
		z-index 4
/*  </header>  */