/*  <vars>  */
fontFira = 'Fira Sans Condensed';
fontOpen = 'Open Sans';
/*  </vars>  */

/*  <text>  */
.page-title
	position relative
	color #fff
	font-weight 500
	font-size 5rem
	font-family fontFira
	line-height 4.4rem
	text-align center
	padding-bottom 18px
	margin 0
	&:before
		position absolute
		bottom 0
		left 50%
		width 30px
		height 6px
		background-color #d9a501
		content ''
		transform translateX(-50%)
/*  </text>  */

/*  <buttons>  */
.btn
	height 54px
	color #000
	font-weight 500
	font-size 2.4rem
	background-color #d9a501
	border 0
	border-radius (@height / 2)
	padding 0 37px
	box-shadow 4px 5px 4px rgba(#684e00, .42)
	transition all .2s
	^[0]&--blue
		background-color #71aed2
		box-shadow 4px 5px 4px rgba(#23678f, .42)
		&:hover
		&:active
			background-color #72c9ff
	^[0]&--green
		background-color #36c13c
		box-shadow 4px 5px 4px rgba(#0c7811, .42)
		&:hover
		&:active
			background-color #51ec4f
	&:hover
	&:active
		text-decoration none
		background-color #fbc10a
	a^[0]
		display inline-block
		line-height 54px
	&--fullwidth
		width 100%
/*  </buttons>  */

/*  <animations>  */
@keyframes stars
	from
		transform translate3d(0, 0, 0)
	to
		transform translate3d(-1920px, 0, 0)
@keyframes fade
	from
		opacity 0
	to
		opacity 1
@keyframes fly
	25%
		transform translate(-3px, 0)
	50% 
		transform translate(-6px, 5px)
	75%
		transform translate(-3px, 5px)
/*  </animations>  */